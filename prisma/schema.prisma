generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum ProductCategory {
  ELECTRONICS
  JEWELERY
  MENSCLOTHING
  WOMENSCLOTHING
}

model Order {
  id String @id @default(cuid())
  email String
  amount Float
  userName String
  products Product[] @relation("OrderToProduct")
}

model Product{
  id    String @id @default(cuid())
  title  String
  price Float
  description String
  image String
  category ProductCategory
  rating Float
  quantity Int
  cart        Cart?  @relation("CartToProduct", fields: [cartId], references: [id])
  cartId      String?
  orders      Order[] @relation("OrderToProduct")
}

model Cart {
  id String @id @default(cuid())
  userName String
  email String @unique
  products Product[] @relation("CartToProduct")
}